<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SignIn">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_user_icon"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/btn_user_icon"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@color/colorButton"
                android:fontFamily="sans-serif"
                android:text="@string/string_new_photo"
                android:textAllCaps="false"
                android:textColor="@color/color_font"
                />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:textColor="@color/color_font"
                android:textSize="18sp" />
<!--            android:text="@string/string_test_user_name"-->

            <EditText
                android:id="@+id/edt_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/color_font"
                android:textSize="18sp" />
<!--            android:text="@string/string_test_user_email"-->

            <EditText
                android:id="@+id/edt_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Phone Number"
                android:inputType="text"
                android:textColor="@color/color_font"
                android:textSize="18sp" />
<!--            android:text="@string/string_test_user_phone"-->

            <EditText
                android:id="@+id/edt_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/color_font"
                android:textSize="18sp" />
<!--            android:text="@string/string_test_user_password"-->

            <EditText
                android:id="@+id/edt_user_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Confirm Password"
                android:inputType="text"
                android:textColor="@color/color_font"
                android:textSize="18sp" />
<!--            android:text="@string/string_test_user_password"-->

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@color/colorButton"
                android:fontFamily="sans-serif"
                android:text="@string/string_signUp"
                android:textAllCaps="false"
                android:textColor="@color/color_font" />

            <TextView
                android:id="@+id/txt_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:padding="15dp"
                android:text="@string/string_have_account_message"
                android:textAlignment="center"
                android:textColor="@color/color_font" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>