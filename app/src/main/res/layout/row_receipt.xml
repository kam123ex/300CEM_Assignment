<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_frontend"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/txt_receipt_date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_marginLeft="5dp"
            android:text="Receipt Date"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_receipt_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Receipt Time"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_receipt_product_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_receipt_date"
            android:layout_marginLeft="50dp"
            android:text="Product name"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_receipt_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_receipt_product_name"
            android:layout_marginLeft="50dp"
            android:text="Quantity"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_receipt_amount"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_receipt_quantity"
            android:layout_marginLeft="50dp"
            android:text="Total Amount"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_receipt_user"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_receipt_amount"
            android:layout_marginLeft="50dp"
            android:text="Order user"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_receipt_address"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_receipt_user"
            android:layout_marginLeft="50dp"
            android:text="Address"
            android:textColor="@color/color_font"
            android:textSize="14dp"
            android:textStyle="bold"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>